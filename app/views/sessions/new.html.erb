<div id="login-container">
    <div id="outer-decor">
        <div id="login-wrapper">

        <%= image_tag 'logo.png', id: "logo-login" %>

            <%= form_with url: session_path do |form| %>
                <%= form.email_field :email_address, id: "input-email", class: "input-login", required: true, autofocus: true, autocomplete: "username", placeholder: "E-Mail", value: params[:email_address] %><br>
                <%= form.password_field :password, id: "input-password", class: "input-login", required: true, autocomplete: "current-password", placeholder: "Passwort", maxlength: 72 %><br>
                <%= form.submit "Anmelden", id: "submit-login" %>
            <% end %>
            <br>

            <%= link_to "Forgot password?", new_password_path, id: "forgot-link" %>
        </div>
    </div>
</div>